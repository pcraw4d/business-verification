{
  "name": "kyb-platform-frontend",
  "version": "1.0.0",
  "description": "KYB Platform Frontend - Merchant-Centric UI with Performance Optimization",
  "main": "index.js",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:analyze": "ANALYZE=true webpack --mode production",
    "build:dev": "webpack --mode development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint components/ --ext .js,.ts",
    "lint:fix": "eslint components/ --ext .js,.ts --fix",
    "format": "prettier --write components/",
    "format:check": "prettier --check components/",
    "bundle:size": "webpack-bundle-analyzer dist/*.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "npm run bundle:size",
    "serve": "http-server dist -p 8080 -c-1",
    "preview": "npm run build && npm run serve"
  },
  "dependencies": {
    "core-js": "^3.32.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/plugin-proposal-class-properties": "^7.18.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.0",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.0",
    "@babel/preset-env": "^7.22.0",
    "autoprefixer": "^10.4.14",
    "babel-jest": "^29.5.0",
    "babel-loader": "^9.1.0",
    "compression-webpack-plugin": "^10.0.0",
    "css-loader": "^6.8.0",
    "cssnano": "^6.0.0",
    "eslint": "^8.42.0",
    "html-loader": "^4.2.0",
    "http-server": "^14.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdom": "^22.1.0",
    "mini-css-extract-plugin": "^2.7.0",
    "postcss": "^8.4.24",
    "postcss-loader": "^7.3.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "sass": "^1.63.0",
    "sass-loader": "^13.3.0",
    "style-loader": "^3.3.0",
    "terser-webpack-plugin": "^5.3.0",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 8"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": ["> 1%", "last 2 versions", "not ie <= 8"]
          },
          "modules": false,
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-optional-chaining",
      "@babel/plugin-proposal-nullish-coalescing-operator"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/components/jest.setup.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/components/$1",
      "^@utils/(.*)$": "<rootDir>/components/utils/$1",
      "^@merchant/(.*)$": "<rootDir>/components/merchant/$1",
      "^@styles/(.*)$": "<rootDir>/styles/$1"
    },
    "collectCoverageFrom": [
      "components/**/*.{js,ts}",
      "!components/**/*.test.{js,ts}",
      "!components/**/*.spec.{js,ts}",
      "!components/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "kyb",
    "merchant",
    "portfolio",
    "dashboard",
    "virtual-scrolling",
    "lazy-loading",
    "performance",
    "optimization"
  ],
  "author": "KYB Platform Team",
  "license": "MIT"
}
