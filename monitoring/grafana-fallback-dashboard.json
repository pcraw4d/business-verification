      {
        "id": 3,
        "title": "Fallback by Category",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum(kyb_fallback_by_category_total) by (category) or on() vector(0)",
            "legendFormat": "{{category}}",
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "${DS_PROMETHEUS}"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "mappings": [],
