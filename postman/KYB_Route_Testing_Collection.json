				{
					"name": "CORS Preflight - Auth Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"pm.test(\"CORS headers present\", function () {",
									"    pm.expect(pm.response.headers.get('Access-Control-Allow-Origin')).to.exist;",
									"});",
									"pm.test(\"Specific origin (not wildcard)\", function () {",
									"    var allowOrigin = pm.response.headers.get('Access-Control-Allow-Origin');",
									"    pm.expect(allowOrigin).to.not.equal('*');",
									"});",
									"pm.test(\"Credentials allowed\", function () {",
									"    var allowCredentials = pm.response.headers.get('Access-Control-Allow-Credentials');",
									"    pm.expect(allowCredentials).to.equal('true');",
									"});"
								],
