# Module-specific Dockerfile for microservices deployment
FROM golang:1.22-alpine AS builder

# Install build dependencies
RUN apk add --no-cache git ca-certificates tzdata

# Set working directory
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code for specific module and shared components
COPY internal/modules/ ./internal/modules/
COPY internal/shared/ ./internal/shared/
COPY internal/observability/ ./internal/observability/
COPY internal/error_resilience/ ./internal/error_resilience/
COPY internal/microservices/ ./internal/microservices/
COPY internal/config/ ./internal/config/
COPY internal/cache/ ./internal/cache/
COPY internal/routing/ ./internal/routing/
COPY pkg/ ./pkg/
COPY configs/ ./configs/

# Build the module-specific application
ARG MODULE_NAME=all
ARG BUILD_TAGS=""
RUN CGO_ENABLED=0 GOOS=linux go build \
    -a -installsuffix cgo \
    -ldflags="-w -s" \
    -tags="${BUILD_TAGS}" \
    -o business-verification-${MODULE_NAME} \
    ./cmd/api/

# Production stage
FROM alpine:latest

# Install runtime dependencies
RUN apk --no-cache add ca-certificates tzdata curl wget

# Create non-root user
RUN addgroup -g 1001 -S appgroup && \
    adduser -u 1001 -S appuser -G appgroup

# Set working directory
WORKDIR /app

# Copy binary from builder stage
ARG MODULE_NAME=all
COPY --from=builder /app/business-verification-${MODULE_NAME} ./business-verification

# Copy configuration files
COPY --from=builder /app/configs ./configs

# Create necessary directories
RUN mkdir -p logs backups build modules && \
    chown -R appuser:appgroup /app

# Switch to non-root user
USER appuser

# Expose port
EXPOSE 8080

# Health check for module
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=5 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run the module
CMD ["./business-verification"]
