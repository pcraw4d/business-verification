{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "services/classification-service/Dockerfile",
    "watchPatterns": []
  },
  "deploy": {
    "startCommand": "./classification-service",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "ENV": "production",
        "LOG_LEVEL": "info",
        "PYTHON_ML_SERVICE_URL": "https://python-ml-service-production.up.railway.app"
      }
    },
    "staging": {
      "variables": {
        "ENV": "staging",
        "LOG_LEVEL": "debug",
        "PYTHON_ML_SERVICE_URL": "https://python-ml-service-staging.up.railway.app"
      }
    }
  }
}
