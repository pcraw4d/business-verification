{
  "accuracy_optimization": {
    "target_accuracy": 0.90,
    "max_iterations": 100,
    "cross_validation_folds": 5,
    "validation_split": 0.2,
    "test_split": 0.2,
    "sequence_length": 24,
    "num_businesses": 1000,
    "enable_calibration": true,
    "enable_ensemble": true,
    "enable_hyperparameter_tuning": true,
    "calibration_config": {
      "num_bins": 10,
      "min_samples_per_bin": 10,
      "regularization_factor": 0.1,
      "max_iterations": 100,
      "convergence_threshold": 0.001
    },
    "ensemble_config": {
      "method": "weighted_average",
      "weight_optimization": true,
      "validation_split": 0.2,
      "min_models": 2,
      "max_models": 5,
      "confidence_threshold": 0.7,
      "fallback_model": "xgboost"
    },
    "hyperparameter_config": {
      "optimization_method": "bayesian",
      "max_iterations": 100,
      "convergence_threshold": 0.001,
      "search_space": {
        "learning_rate": {
          "type": "float",
          "min": 0.001,
          "max": 0.1,
          "default": 0.01
        },
        "max_depth": {
          "type": "int",
          "min": 3,
          "max": 10,
          "default": 6
        },
        "n_estimators": {
          "type": "int",
          "min": 50,
          "max": 500,
          "default": 100
        },
        "subsample": {
          "type": "float",
          "min": 0.5,
          "max": 1.0,
          "default": 0.8
        },
        "colsample_bytree": {
          "type": "float",
          "min": 0.5,
          "max": 1.0,
          "default": 0.8
        }
      }
    },
    "lstm_config": {
      "sequence_length": 24,
      "hidden_units": [64, 32],
      "dropout_rate": 0.2,
      "learning_rate": 0.001,
      "batch_size": 32,
      "epochs": 100,
      "early_stopping_patience": 10,
      "validation_split": 0.2
    },
    "performance_targets": {
      "max_latency_ms": 200,
      "min_throughput_rps": 100,
      "max_memory_mb": 512,
      "max_cpu_percent": 80
    },
    "monitoring": {
      "enable_metrics": true,
      "metrics_interval_seconds": 60,
      "enable_alerts": true,
      "alert_thresholds": {
        "accuracy_drop_percent": 5,
        "latency_increase_percent": 20,
        "error_rate_percent": 1
      }
    }
  }
