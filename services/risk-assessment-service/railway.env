# Railway Environment Configuration for Risk Assessment Service
# This file contains environment variables specific to Railway deployment

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
SERVICE_NAME=risk-assessment-service
SERVICE_VERSION=1.0.0
SERVICE_DESCRIPTION=Enhanced Risk Assessment Service with ML-powered predictions and real-time monitoring

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENV=production
ENVIRONMENT=production
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# PORT is automatically set by Railway
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_TARGET_RPS=16.67
PERFORMANCE_TARGET_LATENCY=1s
PERFORMANCE_TARGET_ERROR_RATE=0.01
PERFORMANCE_TARGET_THROUGHPUT=1000

# =============================================================================
# METRICS AND MONITORING
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/api/v1/metrics
HEALTH_CHECK_PATH=/health

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER=1000
RATE_LIMIT_WINDOW_SIZE=60
RATE_LIMIT_BURST_SIZE=200

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL=5m
CACHE_MAX_SIZE=1000

# =============================================================================
# REQUEST HANDLING
# =============================================================================
REQUEST_TIMEOUT=30s
MAX_CONCURRENT_REQUESTS=100
MAX_REQUEST_SIZE=10485760

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# =============================================================================
# SECURITY
# =============================================================================
SECURITY_HEADERS_ENABLED=true
SECURITY_CSP_ENABLED=true
SECURITY_HSTS_ENABLED=true

# =============================================================================
# ML CONFIGURATION
# =============================================================================
ML_ENABLED=true
ML_MODEL_PATH=/app/models
ML_CACHE_ENABLED=true
ML_CACHE_TTL=10m

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================
# These will be set via Railway variables for security
NEWS_API_KEY=${NEWS_API_KEY}
NEWS_API_TIMEOUT=15s
NEWS_API_ENABLED=${NEWS_API_ENABLED:-false}

OPEN_CORPORATES_API_KEY=${OPEN_CORPORATES_API_KEY}
OPEN_CORPORATES_TIMEOUT=15s
OPEN_CORPORATES_ENABLED=${OPEN_CORPORATES_ENABLED:-false}

GOVERNMENT_API_KEY=${GOVERNMENT_API_KEY}
GOVERNMENT_API_TIMEOUT=15s
GOVERNMENT_API_ENABLED=${GOVERNMENT_API_ENABLED:-false}

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# These will be set via Railway variables for security
SUPABASE_URL=${SUPABASE_URL}
SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
SUPABASE_SERVICE_ROLE_KEY=${SUPABASE_SERVICE_ROLE_KEY}

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_RISK_ASSESSMENT=true
FEATURE_ML_PREDICTIONS=true
FEATURE_EXTERNAL_DATA_SOURCES=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_REAL_TIME_ANALYTICS=true
FEATURE_BATCH_PROCESSING=true

# =============================================================================
# OBSERVABILITY
# =============================================================================
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.1
LOGGING_STRUCTURED=true
LOGGING_LEVEL=info

# =============================================================================
# RESOURCE LIMITS
# =============================================================================
MAX_MEMORY_USAGE=512Mi
MAX_CPU_USAGE=500m
MAX_GOROUTINES=1000

# =============================================================================
# DEPLOYMENT
# =============================================================================
DEPLOYMENT_ENVIRONMENT=railway
DEPLOYMENT_REGION=us-east-1
DEPLOYMENT_VERSION=1.0.0
