# Production Environment Configuration
ENV=production

# Server Configuration
PORT=8080
HOST=0.0.0.0
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=60s

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-Requested-With
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER=100
RATE_LIMIT_WINDOW_SIZE=60
RATE_LIMIT_BURST_SIZE=200

# Auth-Specific Rate Limiting
AUTH_RATE_LIMIT_ENABLED=true
AUTH_RATE_LIMIT_LOGIN_ATTEMPTS_PER=3
AUTH_RATE_LIMIT_REGISTER_ATTEMPTS_PER=2
AUTH_RATE_LIMIT_PASSWORD_RESET_ATTEMPTS_PER=2
AUTH_RATE_LIMIT_WINDOW_SIZE=60s
AUTH_RATE_LIMIT_LOCKOUT_DURATION=30m

# Session & Cookies
REFRESH_COOKIE_NAME=refresh_token
CSRF_COOKIE_NAME=XSRF-TOKEN
COOKIE_DOMAIN=
COOKIE_PATH=/
COOKIE_SECURE=true
COOKIE_SAMESITE=None

# Database Configuration
DB_DRIVER=postgres
DB_HOST=your_production_db_host
DB_PORT=5432
DB_USERNAME=your_production_db_user
DB_PASSWORD=your_production_db_password
DB_DATABASE=business_verification_prod
DB_SSL_MODE=require
DB_MAX_OPEN_CONNS=50
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=15m
DB_AUTO_MIGRATE=false

# Authentication Configuration
JWT_SECRET=your_production_jwt_secret_use_strong_random_string
JWT_EXPIRATION=24h
REFRESH_EXPIRATION=168h
MIN_PASSWORD_LENGTH=12
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL=true
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION=30m

# Observability Configuration
LOG_LEVEL=info
LOG_FORMAT=json
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
TRACING_ENABLED=true
TRACING_URL=https://your-tracing-endpoint.com/api/traces
HEALTH_CHECK_PATH=/health

# External Services - Business Data API
BUSINESS_DATA_API_ENABLED=true
BUSINESS_DATA_API_BASE_URL=https://your-business-data-api.com
BUSINESS_DATA_API_KEY=your_business_data_api_key
BUSINESS_DATA_API_TIMEOUT=30s
BUSINESS_DATA_API_MAX_RETRIES=3

# External Services - Risk Assessment API
RISK_ASSESSMENT_API_ENABLED=true
RISK_ASSESSMENT_API_BASE_URL=https://your-risk-assessment-api.com
RISK_ASSESSMENT_API_KEY=your_risk_assessment_api_key
RISK_ASSESSMENT_API_TIMEOUT=30s
RISK_ASSESSMENT_API_MAX_RETRIES=3

# External Services - Compliance API
COMPLIANCE_API_ENABLED=true
COMPLIANCE_API_BASE_URL=https://your-compliance-api.com
COMPLIANCE_API_KEY=your_compliance_api_key
COMPLIANCE_API_TIMEOUT=30s
COMPLIANCE_API_MAX_RETRIES=3

# Feature Flags
FEATURE_BUSINESS_CLASSIFICATION=true
FEATURE_RISK_ASSESSMENT=true
FEATURE_COMPLIANCE_FRAMEWORK=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_MONITORING=true
FEATURE_BATCH_PROCESSING=true
FEATURE_API_KEY_MANAGEMENT=true
FEATURE_WEBHOOK_SUPPORT=true
FEATURE_EXPORT_FUNCTIONALITY=true

# IP-based blocking
IP_BLOCK_ENABLED=true
IP_BLOCK_THRESHOLD=10
IP_BLOCK_WINDOW=5m
IP_BLOCK_DURATION=1h
IP_BLOCK_WHITELIST=
IP_BLOCK_BLACKLIST=
