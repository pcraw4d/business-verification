# Feature Flags Configuration
# This file contains environment variables for controlling feature flags

# Modular Architecture Feature Flags
ENABLE_MODULAR_ARCHITECTURE=false
MODULAR_ARCHITECTURE_PERCENTAGE=0

# Intelligent Routing Feature Flags
ENABLE_INTELLIGENT_ROUTING=false
INTELLIGENT_ROUTING_PERCENTAGE=0

# Enhanced Classification Feature Flags
ENABLE_ENHANCED_CLASSIFICATION=false
ENHANCED_CLASSIFICATION_PERCENTAGE=0

# Legacy Compatibility Feature Flags
ENABLE_LEGACY_COMPATIBILITY=true

# A/B Testing Feature Flags
ENABLE_AB_TESTING=false
AB_TESTING_PERCENTAGE=10

# Performance Monitoring Feature Flags
ENABLE_PERFORMANCE_MONITORING=true

# Graceful Degradation Feature Flags
ENABLE_GRACEFUL_DEGRADATION=true

# Feature Flag Rollout Strategy
# 
# Phase 1: Development (0% rollout)
# - ENABLE_MODULAR_ARCHITECTURE=false
# - ENABLE_INTELLIGENT_ROUTING=false
# - ENABLE_ENHANCED_CLASSIFICATION=false
# - ENABLE_LEGACY_COMPATIBILITY=true
#
# Phase 2: Internal Testing (10% rollout)
# - ENABLE_MODULAR_ARCHITECTURE=true
# - MODULAR_ARCHITECTURE_PERCENTAGE=10
# - ENABLE_INTELLIGENT_ROUTING=true
# - INTELLIGENT_ROUTING_PERCENTAGE=10
# - ENABLE_AB_TESTING=true
# - AB_TESTING_PERCENTAGE=10
#
# Phase 3: Beta Testing (25% rollout)
# - MODULAR_ARCHITECTURE_PERCENTAGE=25
# - INTELLIGENT_ROUTING_PERCENTAGE=25
# - ENABLE_ENHANCED_CLASSIFICATION=true
# - ENHANCED_CLASSIFICATION_PERCENTAGE=25
#
# Phase 4: Production Rollout (50% rollout)
# - MODULAR_ARCHITECTURE_PERCENTAGE=50
# - INTELLIGENT_ROUTING_PERCENTAGE=50
# - ENHANCED_CLASSIFICATION_PERCENTAGE=50
#
# Phase 5: Full Production (100% rollout)
# - MODULAR_ARCHITECTURE_PERCENTAGE=100
# - INTELLIGENT_ROUTING_PERCENTAGE=100
# - ENHANCED_CLASSIFICATION_PERCENTAGE=100
# - ENABLE_LEGACY_COMPATIBILITY=false (after validation)
#
# Rollback Strategy:
# - Set all percentages to 0 to immediately rollback to legacy
# - Set ENABLE_LEGACY_COMPATIBILITY=true to ensure fallback
# - Monitor error rates and performance metrics
#
# Monitoring:
# - Track response times for both architectures
# - Monitor error rates and success rates
# - Compare accuracy between legacy and modular implementations
# - Monitor resource usage and performance
