{
  "performance_tests": {
    "base_url": "http://localhost:8080",
    "report_path": "./performance-reports",
    "default_timeout": "30s",
    "test_configurations": {
      "load_test": {
        "concurrent_users": 50,
        "test_duration": "10m",
        "ramp_up_duration": "1m",
        "request_timeout": "30s",
        "max_memory_mb": 1000,
        "target_response_ms": 200,
        "error_threshold": 1.0,
        "throughput_target": 200,
        "description": "Load testing with realistic data to validate system performance under normal load conditions"
      },
      "stress_test": {
        "concurrent_users": 200,
        "test_duration": "15m",
        "ramp_up_duration": "2m",
        "request_timeout": "30s",
        "max_memory_mb": 2000,
        "target_response_ms": 500,
        "error_threshold": 5.0,
        "throughput_target": 500,
        "description": "Stress testing under high load to identify system breaking points and performance limits"
      },
      "memory_test": {
        "concurrent_users": 100,
        "test_duration": "20m",
        "ramp_up_duration": "2m",
        "request_timeout": "30s",
        "max_memory_mb": 2000,
        "target_response_ms": 300,
        "error_threshold": 2.0,
        "throughput_target": 150,
        "description": "Memory usage testing to monitor memory consumption patterns and identify memory leaks"
      },
      "response_time_test": {
        "concurrent_users": 25,
        "test_duration": "5m",
        "ramp_up_duration": "30s",
        "request_timeout": "30s",
        "max_memory_mb": 1000,
        "target_response_ms": 100,
        "error_threshold": 0.5,
        "throughput_target": 150,
        "description": "Response time validation to ensure API endpoints meet performance requirements"
      },
      "end_to_end_test": {
        "concurrent_users": 75,
        "test_duration": "30m",
        "ramp_up_duration": "3m",
        "request_timeout": "30s",
        "max_memory_mb": 1500,
        "target_response_ms": 300,
        "error_threshold": 1.5,
        "throughput_target": 100,
        "description": "End-to-end performance test covering complete user workflows and system integration"
      }
    },
    "performance_targets": {
      "api_response_time_ms": 200,
      "ml_classification_time_ms": 100,
      "ml_risk_detection_time_ms": 50,
      "database_query_improvement_percent": 50,
      "system_uptime_percent": 99.9,
      "error_rate_percent": 1.0,
      "throughput_req_per_second": 100,
      "memory_usage_mb": 1000,
      "cpu_usage_percent": 80
    },
    "test_scenarios": {
      "classification_scenarios": {
        "weight": 30,
        "description": "Business classification scenarios covering various industries and complexity levels"
      },
      "risk_assessment_scenarios": {
        "weight": 25,
        "description": "Risk assessment scenarios covering different risk levels and business types"
      },
      "business_management_scenarios": {
        "weight": 20,
        "description": "Business management operations including CRUD operations and analytics"
      },
      "user_management_scenarios": {
        "weight": 15,
        "description": "User management operations including profile management and permissions"
      },
      "monitoring_scenarios": {
        "weight": 10,
        "description": "System monitoring and health check endpoints"
      }
    },
    "reporting": {
      "generate_json_reports": true,
      "generate_markdown_summary": true,
      "include_prometheus_metrics": true,
      "save_individual_test_reports": true,
      "report_retention_days": 30
    },
    "monitoring": {
      "enable_prometheus_metrics": true,
      "metrics_endpoint": "/metrics",
      "health_check_interval": "10s",
      "performance_alert_thresholds": {
        "response_time_ms": 500,
        "error_rate_percent": 5.0,
        "memory_usage_mb": 1500,
        "cpu_usage_percent": 90
      }
    }
  },
  "environment_specific": {
    "development": {
      "base_url": "http://localhost:8080",
      "concurrent_users_multiplier": 0.5,
      "test_duration_multiplier": 0.5
    },
    "staging": {
      "base_url": "https://staging-api.kyb-platform.com",
      "concurrent_users_multiplier": 0.8,
      "test_duration_multiplier": 0.8
    },
    "production": {
      "base_url": "https://api.kyb-platform.com",
      "concurrent_users_multiplier": 1.0,
      "test_duration_multiplier": 1.0
    }
  }
}
